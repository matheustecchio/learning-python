# %%
# Variable exemples
int = 1
float = 1.5
string = "string"
list = [1, 2, 3, 4, 5]

# %%
# .format exemple
name = "Matheus"
age = 19

print("My name is {} and my age is {}.".format(name, age))
# or
print("My name is {one} and my age is {two}, yes {two}.".format(one=name, two=age))

# %%
# Select characters at string
my_name = "Matheus Tecchio"
my_name[:6]  #>> 'Matheu'
my_name[1:]  #>> 'atheus Tecchio'
my_name[1:6] #>> 'atheu'

# %%
# List 
my_list = ["a", "b", "c", "d"]
my_list[1:3] #>> ['b', 'c']

my_list.append("APPEND")
print(my_list)
my_list[1] = "NEW"
print(my_list)

# %%
